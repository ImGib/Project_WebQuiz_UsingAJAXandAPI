<script>
    function loadDashBoard() {
        loadNumberofSubject();
        loadHistoryDashboard();
        loadUsers();
    };

    loadDashBoard();

    function loadNumberofSubject(){
        $.ajax({
            url: 'http://localhost:5020/api/Subjects/Dashboard/Subject',
            method:'GET',
            contentType:'application/json',
            success: res =>{
                if (res.message == 'OK'){
                    var paragraph = document.getElementById("Subjects");
                    paragraph.innerHTML = res.data.noSubject;
                    
                    var paragraph = document.querySelector("#subDashboard tbody");
                    paragraph.innerHTML = "";

                    res.data.sublist.forEach(row => {
                        var tr =
                            '<tr>'
                            + '    <td class="align-middle">'
                            + '        <div class="d-flex align-items-center">'
                            + '            <div class="ms-3 lh-1">'
                            + '                <h5 class=" mb-1">' + row.name + '</h5>'
                            + '            </div>'
                            + '        </div>'
                            + '    </td>'
                            + '    <td class="align-middle">' + row.enroll + '</td>'
                            + '    <td class="align-middle"><span">' + row.quizNum + '</span></td>'
                            + '    <td class="align-middle">'
                            + '        <div class="avatar-group"><span class="avatar avatar-sm">'
                            + '             <span>'+row.questionNum + '</span>'
                            + '        </div>'
                            + '    </td>'
                            + '    <td class="align-middle text-dark">'
                            + '        <div class="float-start me-3">'
                            + '            ' + row.passingPercentage + '<!-- -->%'
                            + '        </div>'
                            + '        <div class="mt-2">'
                            + '            <div style="height:5px" class="progress">'
                            + '                <div role="progressbar" class="progress-bar" style="width:' + row.passingPercentage + '%" aria-valuenow="15" aria-valuemin="0" aria-valuemax="100"></div>'
                            + '            </div>'
                            + '        </div>'
                            + '    </td>'
                            + '</tr>';

                        paragraph.innerHTML += tr;
                    })
                }
            }
        })
    }
    function loadHistoryDashboard() {
        $.ajax({
            url: 'http://localhost:5020/api/Histories/Dashboard/History',
            method: 'GET',
            contentType: 'application/json',
            success: res => {
                if (res.message == 'OK') {
                    var paragraph = document.getElementById("Quizzes"); 
                    paragraph.innerHTML = res.data.quizzes;

                    var paragraph = document.getElementById("PassingPercen");
                    paragraph.innerHTML = res.data.passingPercentage + "%";
                }
            }
        })
    }
    function loadUsers() {
        $.ajax({
            url: 'http://localhost:5020/api/Users/Dashboard/User',
            method: 'GET',
            contentType: 'application/json',
            success: res => {
                if (res.message == 'OK') {
                    console.log(res.data);
                    var paragraph = document.getElementById("UsersDash");
                    paragraph.innerHTML = res.data.users;

                    var paragraph = document.querySelector("#UserTable tbody");
                    paragraph.innerHTML = "";
                    
                    res.data.top.forEach(row => {
                        var row =
                            '<tr>'
                            + '    <td class="align-middle">'
                            + '        <div class="d-flex align-items-center">'
                            + '            <div class="ms-3 lh-1">'
                            + '                <h5 class=" mb-1">' + row.username.trim() + '</h5>'
                            + '                <p class="mb-0">' + row.firstName + ' ' + row.lastName + '</p>'
                            + '            </div>'
                            + '        </div>'
                            + '    </td>'
                            + '    <td class="align-middle">' + row.email + '</td>'
                            + '    <td class="align-middle">' + row.phonenumber + '</td>'
                            + '</tr>';

                        paragraph.innerHTML += row;
                    })
                }
            }
        })
    }
</script>